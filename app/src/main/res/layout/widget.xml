<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Weather_App.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Weather_App.AppWidgetContainer"
    android:background="@drawable/background1">
    <ImageView
        android:id="@+id/widget_weather_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:alpha="0.4"
        android:layout_centerInParent="true"
        android:src="@drawable/w13d" />

    <TextView
        android:id="@+id/widget_temperature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/widget_weather_icon"
        android:layout_alignTop="@+id/widget_weather_icon"
        android:layout_alignEnd="@+id/widget_weather_icon"
        android:layout_alignBottom="@+id/widget_weather_icon"

        android:fontFamily="@font/sourcesans"
        android:gravity="center"
        android:textAlignment="center"
        android:text="27Â°"
        android:textColor="@color/city"
        android:textSize="100sp"
        android:textStyle="bold" />
</RelativeLayout>